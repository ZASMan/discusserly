.container
	.row
		.col-md-6
		%h1 Create Profile
		.form-group
			=form_for @profile do |f|
				=f.label :location
				=f.text_field :location, :class => 'form-control', :style => 'width:500px'
				=f.label :occupation
				=f.text_field :occupation, :class => 'form-control', :style => 'width:500px'
				=f.label :about_me
				=f.text_field :about_me, :class => 'form-control', :style => 'with:500px; height: 200px'
				=f.submit 'Save Changes', :class => 'btn btn-primary'
