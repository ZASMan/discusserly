.container
	.row
		.col-md-2
		.col-md-8
			
			%ul.data-index{:style => "text-align:center"}
				%h1 Posts
				-@posts.each do |post|
					%li
						.panel.panel-primary{:style => "text-align:center"}
							.panel-heading
								.panel-title
									=link_to post.title, post
							.panel-body
								%h5
									by
									=post.user.name
								%h5
									Submitted on:
									=post.created_at.strftime("%a, %B %d, %Y")
								
								-#Preview of text
								%p
									=post.content[0, 200] + "..."
								<center>
								=link_to 'Read More...', post_path(post)
								%br
								-if logged_in? && current_user.admin?
									-#Also need to add a conditional here to display these
									-#Edit options if the post belongs to the user
									=link_to 'Edit', edit_post_path(post), :class => 'btn btn-warning'
									=link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure you wish to delete this post? This cannot  be undone'}, :class => 'btn btn-danger'
								</center>
				=will_paginate	
		.col-md-2
