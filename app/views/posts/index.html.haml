.container
	.row
		.col-md-2
		.col-md-8
			=will_paginate
			%ul.data-index{:style => "text-align:center"}
				%h1 Posts
				-@posts.each do |post|
					%li
						.panel.panel-primary{:style => "text-align:center"}
							.panel-heading
								.panel-title
									=link_to post.title, post
							.panel-body
								%h5
									by
									=post.user.name
								
								-#Preview of text
								%p
									=post.content[0, 100] + "..."
								<center>
								=link_to 'Read More', post_path(post), :class => 'btn btn-primary'
								=link_to 'Edit', edit_post_path(post), :class => 'btn btn-warning'
								=link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure you wish to delete this post? This cannot  be undone'}, :class => 'btn btn-danger'
								</center>
				=will_paginate	
		.col-md-2
