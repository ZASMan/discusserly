.container
	.row
		.col-md-12
			=will_paginate
			%h1 All Posts
			=link_to 'New Post', new_post_path
			%table.table
				%thead
					%tr
						%th Title
						%th Edit
						%th Destroy
			%tbody
				-@posts.each do |post|
					%tr
						%td
							=link_to post.title, post
						%td
							=link_to 'Edit', edit_post_path(post), :class => 'btn btn-warning'
						%td
							=link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure you wish to delete this post? This cannot  be undone'}, :class => 'btn btn-danger'


			=will_paginate	
