.container
	.row
		.col-md-4
		.col-md-4
			%h1 Log In

			=form_for(:session, url: login_path) do |f|
				.form-group
					=f.label :email
					=f.email_field :email, :class => "form-control login-field", :id => "email-field"
					=f.label :password
					=f.password_field :password, :class => "form-control login-field", :id => "password-field"
					=f.label :remember_me
					=f.check_box :remember_me
					%br
					=f.submit "Log In", :class => "btn btn-primary", :id => "login-submit"
					%br
					=link_to "Forgot Password?", new_password_reset_path
					%br
					=link_to "New User?", signup_path
			.errors{:style => "color:red"}
		.col-md-4
