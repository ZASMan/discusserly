.container
	.row
		.col-md-6
			%h1 Update Profile Settings
			.form-group
				=form_for @user, path: update_profile_user_path(@user) do |f|
					=f.label :name
					=f.text_field :name, :class => "form-control", :style => 'width:500px'
					=f.label :location, 'Current Location'
					=f.text_field :location, :class => 'form-control', :style => "width:500px"
					=f.label :image_url, 'Profile Image URL'
					=f.text_field :image_url, :class => "form-control", :style => 'width:500px'
					=f.label :about_me
					=f.text_field :about_me, :class => "form-control", :style => "height:200px;width:500px"
					=f.submit "Save Changes", :class => "btn btn-primary"
		.col-md-6
