.container
	.row
		.col-md-6
			%h1 Update Account Settings
			.form-group
				=form_for @user do |f|
					=f.label :email
					=f.text_field :email, :class => "form-control", :style => 'width:500px'
					=f.label :password
					=f.password_field :password, :class => "form-control", :style => 'width:500px'
					=f.label :password_confirmation
					=f.password_field :password_confirmation, :class => "form-control", :style => 'width:500px'
					=f.submit "Save Changes", :class => "btn btn-primary"
		.col-md-6
